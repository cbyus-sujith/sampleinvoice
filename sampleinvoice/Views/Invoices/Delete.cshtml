@model sampleinvoice.Models.Invoice

<h1>Delete Invoice</h1>

<h3>Are you sure you want to delete this invoice?</h3>
<div>
    <h4>Invoice Number: @Model.InvoiceNumber</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Customer
        </dt>
        <dd class="col-sm-10">
            @Model.Customer
        </dd>
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.Date.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Customer PONumber
        </dt>
        <dd class="col-sm-10">
            @Model.CustomerPO
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="InvoiceNumber" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
