@model List<sampleinvoice.Models.Invoice>

<h2>Invoices</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form method="get" action="@Url.Action("Index", "Invoices")">
    <div class="form-group">
        <input type="text" name="searchString" placeholder="Search...">
        <input type="submit" value="Search" class="btn btn-primary" />
        @if (!string.IsNullOrEmpty(ViewContext.HttpContext.Request.Query["searchString"]))
        {
            <a asp-action="Index" class="btn btn-secondary">Clear Search</a>
            <p>Search results for: <strong>@ViewContext.HttpContext.Request.Query["searchString"]</strong></p>
        }
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Invoice Number</th>
            <th>Customer</th>
            <th>Date</th>
            <th>Customer PO</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in Model)
        {
            <tr>
                <td>@invoice.InvoiceNumber</td>
                <td>@invoice.Customer</td>
                <td>@invoice.Date.ToShortDateString()</td>
                <td>@invoice.CustomerPO</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@invoice.InvoiceId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@invoice.InvoiceId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@invoice.InvoiceId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
